<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Smart.AppCompat" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">false</item> <!-- íconos oscuros en status bar -->

        <!-- Hace transparente la barra de navegación -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <style name="roundedCorner">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">15dp"></item>
        </style>
    </style>

    <!-- Base application theme. -->


    <style name="Base.Theme.Smart" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item> <!-- íconos oscuros en status bar -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Hace transparente la barra de navegación -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="Theme.Smart" parent="Base.Theme.Smart" />
    <style name="roundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp"></item>
    </style>

</resources>